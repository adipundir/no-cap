{
  "name": "nocap-sdk",
  "version": "1.0.0",
  "description": "Official SDK for accessing verified facts from the NOCAP database built on Walrus",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "examples": "tsx examples.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nocap",
    "fact-checking",
    "walrus",
    "decentralized",
    "blockchain",
    "verification",
    "facts",
    "sdk",
    "typescript"
  ],
  "author": "NOCAP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nocap-org/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/nocap-org/sdk/issues"
  },
  "homepage": "https://nocap.app",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "typescript": "^4.9.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^7.0.0",
    "tsx": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
